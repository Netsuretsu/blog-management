<div class="author">
    <h1 class="author__heading">Hi, I am Netsu</h1>
    <p class="author__body">Web developer</p>
</div>

<img src="/img/hero-image.webp" alt="" class="hero-image">


<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <% data.forEach(post=> { %>
        <ul class="article-ul">
            <li>
                <a href="<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <span class="articles-list__date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
        </ul>
        <% }) %>

            <% if (nextPage !==null) { %>
                <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
                <% } %>

</section>